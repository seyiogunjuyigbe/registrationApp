<% include ../../partials/header %>
<h1>Add a New child</h1>
<form action="/members/<%= member_id %>/children/<%=child._id%>?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="child[FirstName]" value="<%= child.FirstName %>">
    </div>
    <div class="form-group">
        <input class="form-control" id="childsurname" type="text" name="child[LastName]" value=<%= child.LastName %> readonly>
    </div>
    
  
    <div class="form-group">
        <label for="DOB">Date of Birth</label>
        <input class="form-control" type="date" id="DOB" name="child[DateOfBirth]" value="<%= child.DateOfBirth %>">
    </div>
    
    <div class="form-group">
        <label for="gender">Gender</label>
        <select id="gender" class="form-control" name="child[Gender]">
            <option value="">-Please Select-</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>
    <div class="form-group">
        <input class="form-control" type="submit" value="Update Child Details" id="">
    </div>
    
    </form>

 

<% include ../../partials/footer %>