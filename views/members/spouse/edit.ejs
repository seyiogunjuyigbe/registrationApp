<% include ../../partials/header %>
<h1>Add Spouse Details</h1>
           <form action="/members/<%= member_id %>/spouse/<%= spouse._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="spouse[FirstName]" value="<%= spouse.FirstName %>">
            </div>
            <div class="form-group">
                <input class="form-control" id="spouseSurname" type="text" name="spouse[LastName]" value='<%= spouse.LastName %>' readonly>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="tel" name="spouse[PhoneNumber]"  value='<%= spouse.PhoneNumber %>'>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="email" name="spouse[Email]"  value='<%= spouse.Email %>'>
            </div>
            <div class="form-group">
                <label for="spouseDOB">Spouse's Date of Birth</label>
                <input class="form-control" type="date" id="spouseDOB" value='<%= spouse.DateOfBirth %>'>
            </div>
            <div class="form-group">
                <label for="gender">Gender</label>
                <select id="gender" class="form-control" name="spouse[Gender]">
                    <option value="">-Please Select-</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="spouseAddress">Address</label>
                <textarea class="form-control" id="spouseaddress" name="spouse[Address]"><%= spouse.Address %></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="spouse[Occupation]" value="<%= spouse.Occupation %>">
            </div>
            <div class="form-group">
                <input class="form-control btn-success" type="submit" value="Update Spouse Details">
            </div>
        </form>
<% include ../../partials/footer %>