<% include ../../partials/header %>
<h1>Add Spouse Details</h1>
           <form action="/members/<%= member._id %>/spouse/new" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="spouse[FirstName]" placeholder="First Name">
            </div>
            <div class="form-group">
                <input class="form-control" id="spouseSurname" type="text" name="spouse[LastName]" value=<%= member.LastName %> readonly>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="tel" name="spouse[PhoneNumber]" placeholder="Phone Number">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="email" name="spouse[Email]" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="spouseDOB">Spouse's Date of Birth</label>
                <input class="form-control" type="date" id="spouseDOB" name="spouse[DateOfBirth]">
            </div>
            <div class="form-group">
                <label for="gender">Gender</label>
                <select id="gender" class="form-control" name="spouse[Gender]">
                    <option value="">-Please Select-</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <textarea class="form-control" id="spouseaddress" name="spouse[Address]" placeholder="Address"><%= member.Address%></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="spouse[Occupation]" placeholder="Your Occupation">
            </div>
            <div class="form-group">
                <input class="form-control btn-success" type="submit" value="Add Spouse Details">
            </div>
        </form>
<% include ../../partials/footer %>